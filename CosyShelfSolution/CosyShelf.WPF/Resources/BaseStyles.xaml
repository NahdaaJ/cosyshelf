<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Colours-->
    <Color x:Key="Colour1">#606C38</Color>
    <Color x:Key="Colour2">#283618</Color>
    <Color x:Key="Colour3">#FEFAE0</Color>
    <Color x:Key="Colour4">#DDA15E</Color>
    <Color x:Key="Colour5">#BC6C25</Color>
    <Color x:Key="GridColour">#F3DDC2</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Colour1}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Colour2}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Colour3}"/>
    <SolidColorBrush x:Key="QuaternaryBrush" Color="{StaticResource Colour4}"/>
    <SolidColorBrush x:Key="QuinaryBrush" Color="{StaticResource Colour5}"/>
    <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColour}"/>

    <!--Fonts-->
    <FontFamily x:Key="NunitoFont">/CosyShelf.WPF;component/Assets/Fonts/Nunito-VariableFont_wght.ttf#Nunito</FontFamily>


    <DrawingBrush x:Key="GridPatternBrush" Viewport="0,0,70,70" ViewportUnits="Absolute" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource GridBrush}" Thickness="1.7"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry StartPoint="0,0" EndPoint="70,0"/>
                            <LineGeometry StartPoint="0,0" EndPoint="0,70"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

</ResourceDictionary>